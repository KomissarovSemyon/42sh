--help[display usage info]
-H[display usage info]
--version[module command version and configuration options]
-V[module command version and configuration options]
--force[force active dependency resolution]
-f[force active dependency resolution]
--terse[display avail and list output in short format]
-t[display avail and list output in short format]
--long[display avail and list output in long format]
-l[display avail and list output in long format]
--human[display short output in human-readable format]
-h[display short output in human-readable format]
--verbose[verbose]
-v[verbose]
--silent[disable verbose messages]
-s[disable verbose messages]
--create[create caches]
-c[create caches]
--icase[case insensitive]
-i[case insensitive]
--userlvl[set user level to value]
-u[set user level to value]
