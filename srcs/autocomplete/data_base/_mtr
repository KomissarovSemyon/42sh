-C (-h --help)-h[help] (-h --help)--help[help] (-v --version)-v[version] (-v --version)--version[version] (-r --report)-r[report mode] (-r --report)--report[report mode] (-w --report-wide)-w[wide report mode\: do not truncate hostnames] (-w --report-wide)--report-wide[wide report mode\: do not truncate hostnames] (-c --report-cycles)-c[report cycles]:number of pings (-c --report-cycles)--report-cycles[report cycles]:number of pings (-s --psize)-s[packet size]:number of bytes (-s --psize)--psize[packet size]:number of bytes (-t --curses)-t[curses UI] (-t --curses)--curses[curses UI] (-e --mpls)-e[display ICMP MPLS information] (-e --mpls)--mpls[display ICMP MPLS information] (-o --order)-o[order output fields]:fields order (-o --order)--order[order output fields]:fields order (-n --no-dns)-n[no DNS lookups] (-n --no-dns)--no-dns[no DNS lookups] (-g --gtk)-g[GTK+ UI] (-g --gtk)--gtk[GTK+ UI] (-p --split)-p[output for a split-user interface] (-p --split)--split[output for a split-user interface] (-l --raw)-l[raw output format] (-l --raw)--raw[raw output format] (-a --address)-a[source address]:source IP:_hosts (-a --address)--address[source address]:source IP:_hosts (-i --interval)-i[ping interval]:number of seconds (-i --interval)--interval[ping interval]:number of seconds -u[use UDP instead of ICMP echo] -4[use IPv4 only] -6[use IPv6 only] :destination host:_hosts
