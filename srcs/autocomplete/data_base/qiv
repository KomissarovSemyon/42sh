-h[display help information]
--help[display help information]
-v[display version information]
--version[display version information]
-F[read file names from file]
--file[read file names from file]
-e[disable window centering]
--center[disable window centering]
-w[use window with specified width]
-W[use window with specified zoom factor]
-x[use image as the current desktop background, centered]
--root[use image as the current desktop background, centered]
-y[use image on the current desktop background, tiled]
-z[use image as the current desktop background, stretched]
-m[expand image to fit screen size]
--maxpect[expand image to fit screen size]
-t[shrink images to fit screen size]
-b[set brightness]
--brightness[set brightness]
-c[set contrast]
--contrast[set contrast]
-g[set gamma]
--gamma[set gamma]
-n[disable filtering of images by extension]
-i[disable statusbar]
-I[enable statusbar]
--statusbar[enable statusbar]
-p[enable transparency]
--transparency[enable transparency]
-a[grab the pointer in windowed mode]
-G[disable pointer grabbing]
-o[set root background color]
-s[start slideshow immediately]
--slide[start slideshow immediately]
-r[shuffle images for slideshow]
--random[shuffle images for slideshow]
-R[disable delete feature]
--readonly[disable delete feature]
-S[shuffle images for next/prev feature]
--shuffle[shuffle images for next/prev feature]
-d[set slideshow delay]
--delay[set slideshow delay]
-f[use fullscreen window on startup]
--fullscreen[use fullscreen window on startup]
-P[sort images by just the filename]
-M[sort images case-insensitively]
-N[numeric image sort]
-T[reload the image if it changes]
--watch[reload the image if it changes]
