-f[specify font]
--font[specify font]
-d[specify font directory]
--directory[specify font directory]
-w[set output width]
--width[set output width]
-t[adapt to terminal width]
--termwidth[adapt to terminal width]
-F[apply filter to text]
--filter[apply filter to text]
--gay[rainbow filter]
--metal[metal filter]
--irc[output IRC color codes]
--html[output HTML document]
--tga[output TGA document]
-h[help]
--help[help]
-I[print FIGlet-compatible infocode]
--infocode[print FIGlet-compatible infocode]
-v[version]
--version[version]
