-a[add a new feed (requires '--url')]
--add[add a new feed (requires '--url')]
-A[use ASCII characters instead of ANSI for window borders]
--ascii[use ASCII characters instead of ANSI for window borders]
-c[specify an alternate config file]
--config[specify an alternate config file]
-d[delete an existing feed]
--delete[delete an existing feed]
--diag[run raggle in diagnostics/debug mode]
-e[edit an existing feed]
--edit[edit an existing feed]
-f[find feeds containing a string, via Syndic8]
--find[find feeds containing a string, via Syndic8]
--force[force behavior Raggle won't normally allow]
-h[display help information]
--help[display help information]
--usage[display help information]
-i[invalidate a feed (force an update)]
--invalidate[invalidate a feed (force an update)]
-l[list existing feeds (use '--verbose' to show URLs as well)]
--list[list existing feeds (use '--verbose' to show URLs as well)]
--max[set the maximum number of items for a feed (for '--add' and '--edit')]
-p[feed sorting priority: 0 by default, higher values will sort feeds to the top (for '--add' and '--edit')]
--priority[feed sorting priority: 0 by default, higher values will sort feeds to the top (for '--add' and '--edit')]
--purge[purge deleted feeds from feed cache]
-r[refresh attribute of feed (for '--add' and '--edit')]
--refresh[refresh attribute of feed (for '--add' and '--edit')]
--server[run Raggle in HTTP server mode]
--sort[sort feeds by priority then title (case-insensitive)]
-t[title attribute of feed (for '--add' and '--edit')]
--title[title attribute of feed (for '--add' and '--edit')]
--update[update feed (or all feeds, if unspecified)]
-u[URL attribute of feed (for '--add' and '--edit')]
--url[URL attribute of feed (for '--add' and '--edit')]
--verbose[turn on verbose output]
-v[display version information]
--version[display version information]
