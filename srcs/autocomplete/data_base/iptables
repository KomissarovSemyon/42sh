-h[print program information]
--help[print program information]
-V[print version information]
--version[print version information]
-t[specify table]
--table[specify table]
-A[append rules to end of specified chain]
--append[append rules to end of specified chain]
-D[delete rules from specified chain]
--delete[delete rules from specified chain]
-I[insert rules before specified rule number]
--insert[insert rules before specified rule number]
-R[replace a rule]
--replace[replace a rule]
-L[list rules in selected chain]
--list[list rules in selected chain]
-F[flush specified chain (delete all rules)]
--flush[flush specified chain (delete all rules)]
-Z[zero the packet and byte counters]
--zero[zero the packet and byte counters]
-N[create a new user-defined chain]
--new[create a new user-defined chain]
-X[delete a user-defined chain]
-P[set the policy for a chain to given target]
--policy[set the policy for a chain to given target]
-E[rename a user-defined chain]
-p[specify protocol of rule]
--protocol[specify protocol of rule]
-s[specify source]
--src[specify source]
--source[specify source]
-d[specify destination]
--dst[specify destination]
--destination[specify destination]
-j[specify rule target]
--jump[specify rule target]
-i[specify interface via which packet is received]
-o[specify interface via which packet is to be sent]
-f[match second or further fragments only]
--fragment[match second or further fragments only]
-c[initialise packet and byte counters]
-v[enable verbose output]
--verbose[enable verbose output]
-n[print IP addresses and port numbers in numeric format]
--numeric[print IP addresses and port numbers in numeric format]
-x[expand numbers (display exact values)]
--exact[expand numbers (display exact values)]
-m[extended match (may load extension)]
--match[extended match (may load extension)]
