-h[help]
--help[help]
-v[version]
--version[version]
-r[report mode]
--report[report mode]
-w[wide report mode\: do not truncate hostnames]
-c[report cycles]
-s[packet size]
--psize[packet size]
-t[curses UI]
--curses[curses UI]
-e[display ICMP MPLS information]
--mpls[display ICMP MPLS information]
-o[order output fields]
--order[order output fields]
-n[no DNS lookups]
-g[GTK+ UI]
--gtk[GTK+ UI]
-p[output for a split-user interface]
--split[output for a split-user interface]
-l[raw output format]
--raw[raw output format]
-a[source address]
--address[source address]
-i[ping interval]
--interval[ping interval]
-u[use UDP instead of ICMP echo]
