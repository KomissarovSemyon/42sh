--debug[turn on debugging]
-q[quiet output]
--quiet[quiet output]
-v[display version and exit]
--version[display version and exit]
-h[display a short usage message]
--help[display a short usage message]
--stdout[send file to stdout]
--port[specify port device]
--speed[specify serial transfer speed]
--camera[specify camera model]
--filename[specify pattern to save file as]
--usbid[override USB IDs (expert only)]
-a[display camera abilities]
--abilities[display camera abilities]
-f[specify camera folder]
--folder[specify camera folder]
-R[recursion (default for download)]
--recurse[recursion (default for download)]
-l[list folders in folder]
-L[list files in folder]
-m[create a directory]
--mkdir[create a directory]
-r[remove a directory]
--rmdir[remove a directory]
-n[sisplay number of files]
-p[get files given in range]
-P[get all files from folder]
-t[get thumbnails given in range]
-T[get all thumbnails from folder]
-r[get raw data given in range]
-u[upload a file to camera]
--summary[summary of camera status]
--manual[camera driver manual]
--about[show information about the camera driver]
--shell[start the gphoto2 shell]
