-h[display usage information]
--help[display usage information]
-V[output version information]
--version[output version information]
-v[display status information]
--verbose[display status information]
-p[interpret args as process ID]
--pid[interpret args as process ID]
-b[set scheduling policy to SCHED_BATCH]
--batch[set scheduling policy to SCHED_BATCH]
-f[set scheduling policy to SCHED_FIFO]
--fifo[set scheduling policy to SCHED_FIFO]
-o[set policy scheduling policy to SCHED_OTHER]
--other[set policy scheduling policy to SCHED_OTHER]
-r[set scheduling policy to SCHED_RR]
--rr[set scheduling policy to SCHED_RR]
-m[show minimum and maximum valid priorities, then exit]
--max[show minimum and maximum valid priorities, then exit]
