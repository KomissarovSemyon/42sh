-b[run commands from -s -S -o -O and quit]
--batch[run commands from -s -S -o -O and quit]
-Q[suppress output from -s, -S, -o or -O]
-e[open source files using "external editor" mechanism]
--editor[open source files using "external editor" mechanism]
-x[do not automatically parse .lldbinit files]
-X[do not use colors]
-d[print extra information for debugging itself]
--debug[print extra information for debugging itself]
-r[run lldb in REPL mode]
--repl[run lldb in REPL mode]
-h[print the usage information]
--help[print the usage information]
-v[print the current version number]
--version[print the current version number]
-P[print path to the lldb.py file]
-w[wait for the specified process to launch]
