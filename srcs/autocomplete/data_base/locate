-b[match only the basename of files in the database]
--basename[match only the basename of files in the database]
-c[output the number of matching entries]
--count[output the number of matching entries]
-d[use alternative database]
-e[restrict display to existing files]
--existing[restrict display to existing files]
-L[follow symbolic links to find existing files (default)]
--follow[follow symbolic links to find existing files (default)]
-h[show help]
--help[show help]
-i[ignore case distinctions in patterns]
-l[limit search results]
-n[limit search results]
-P[don't follow symbolic links]
-H[don't follow symbolic links]
--nofollow[don't follow symbolic links]
--null[output separated by NUL characters]
-S[show database statistics]
--statistics[show database statistics]
-q[don't report errors]
--quiet[don't report errors]
-r[search for given basic regexp]
--regex[patterns are extended regexps]
-V[show version]
--version[show version]
-w[match entire file path (default)]
--wholename[match entire file path (default)]
