-h[help]
--help[help]
-a[select all chroots]
--all[select all chroots]
-c[use specified chroot]
-d[directory to use]
-l[list available chroots]
--list[list available chroots]
-i[show information about selected chroots]
--info[show information about selected chroots]
-p[print path to selected chroot]
--path[print path to selected chroot]
--config[dump configuration of selected chroots]
-d[preserve user environment]
-q[quiet]
--quiet[quiet]
-v[verbose]
--verbose[verbose]
-V[version]
--version[version]
