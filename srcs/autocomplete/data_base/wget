--version[display version info]
-V[display version info]
--help[display help]
-h[display help]
--background[run in background]
-b[run in background]
--debug[turn on debug output]
-d[turn on debug output]
--quiet[turn off output]
-q[turn off output]
--verbose[turn on verbose output]
-v[turn on verbose output]
-F[treat input file as html]
--continue[continue getting an existing file]
-c[continue getting an existing file]
--timestamping[retrieve only files newer than existing]
-N[retrieve only files newer than existing]
-S[print server response]
--spider[don't download anything]
--user[set both ftp and http user]
--password[set both ftp and http password]
--unlink[remove file before clobber]
-x[force creation of directories]
-E[save all HTML/CSS documents with proper extensions]
--recursive[recurse subdirectories]
-r[recurse subdirectories]
-k[convert links to be relative]
-K[backup files before conversion]
--mirror[mirror (-r -N -l inf --no-remove-listing)]
-m[mirror (-r -N -l inf --no-remove-listing)]
-p[get all images needed to display page]
-H[span hosts]
--relative[follow relative links only]
-L[follow relative links only]
