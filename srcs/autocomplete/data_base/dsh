-v[verbose output]
--verbose[verbose output]
-q[quieter output]
--quiet[quieter output]
-M[prepend the host name on output]
-i[duplicate input given to dsh]
-b[change buffer size used in input duplication]
--bufsize[change buffer size used in input duplication]
-m[execute on machine]
--machine[execute on machine]
-n[how to divide the machines]
-a[execute on all machines]
--all[execute on all machines]
-g[execute on group member]
--group[execute on group member]
-f[use the file as list of machines]
--file[use the file as list of machines]
-r[execute using shell]
--remoteshell[execute using shell]
-o[option to give to remote shell ]
--remoteshellopt[option to give to remote shell ]
-h[display help information]
--help[display help information]
-w[sequentially execute shell]
-c[execute shell concurrently]
-F[concurrent with limit on number]
--forklimit[concurrent with limit on number]
-V[display version information]
--version[display version information]
