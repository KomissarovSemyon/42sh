-h[help]
--help[help]
-a[select all chroots and active sessions]
--all[select all chroots and active sessions]
-c[use specified chroot]
-d[directory to use]
-u[username (default current user)]
-l[list available chroots]
--list[list available chroots]
-i[show information about selected chroots]
--info[show information about selected chroots]
--location[print location of selected chroots]
--config[dump configuration of selected chroots]
-p[preserve user environment]
-q[quiet]
--quiet[quiet]
-v[verbose]
--verbose[verbose]
-V[version]
--version[version]
-b[begin a session; returns a session ID]
-e[end an existing session]
-f[force operation]
--force[force operation]
