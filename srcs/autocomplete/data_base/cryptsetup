-v[enable verbose mode]
--verbose[enable verbose mode]
--debug[enable debug mode]
-h[hash algorithm]
--hash[hash algorithm]
-c[set cipher]
--cipher[set cipher]
-y[query for password twice]
-d[set keyfile]
-l[set keyfile size]
-S[select key slot]
-s[set key size]
-b[force device size]
--size[force device size]
-o[set start offset]
--offset[set start offset]
-p[data to skip at beginning]
--skip[data to skip at beginning]
--readonly[set up read-only mapping]
-i[set password processing duration]
-q[do not ask for confirmation]
-t[set password prompt timeout]
--timeout[set password prompt timeout]
-T[set maximum number of retries]
--tries[set maximum number of retries]
--uuid[set device UUID]
--version[show version information]
